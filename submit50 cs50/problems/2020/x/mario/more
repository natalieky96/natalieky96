#include <cs50.h>
#include <stdio.h>


int main(void)
{
    int h;
    do
    {
        h=get_int("Height:");
    }
    while(h>8 || h<1);
        for(int i=1;i<=h;i++)
        {
            for(int j=0;j<h-i;j++)
            {
                printf(" ");
            }
            for(int z=0;z<i;z++)
            {
            printf("#");
            }
            printf("  ");
            for(int z=0;z<i;z++)
            {
            printf("#");
            }
            printf("\n");
        }
    
}
